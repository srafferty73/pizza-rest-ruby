<h1>Edit Order</h1>

<form action="/pizza-orders/<%= @pizza_order.id %>" method="post">
  <label for="first-name">First name: </label>
  <input type="text" id="first-name" name="first_name" placeholder = "First name" value= " <%= @pizza_order.first_name %>" >

  <label for="last-name">Last name: </label>
  <input type="text" id="last-name" name="last_name" placeholder = "Last name" value= " <%= @pizza_order.last_name %>" >

  <label for="quantity">Quantity: </label>
  <input type="number" id="quantity" name="quantity" min = "1" value=<%= @pizza_order.quantity %>>

  <label for="pizza-select">Select a topping:</label>
  <select id="pizza-select" name="topping">
    <option value="Margherita">Margherita</option>
    <option value="Pepperoni">Pepperoni</option>
    <option value="Mushroom">Mushroom</option>
    <option value="Anchovy">Anchovy</option>
  </select>

  <input type="hidden" name="_method" value="put">
  <input type="submit" value="Edit Order">


</form>
